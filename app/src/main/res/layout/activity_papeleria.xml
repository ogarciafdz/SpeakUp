<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/fondo"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".Papeleria" android:weightSum="1">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="78dp">

        <ImageButton
                android:id="@+id/EFimageButton1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/ic_lapiz"/>

        <ImageButton
                android:id="@+id/EFimageButton2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/ic_tijeras"/>

        <ImageButton
                android:id="@+id/EFimageButton3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/ic_sacpunt"/>

        <ImageButton
                android:id="@+id/EFimageButton4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="51dp"
                android:layout_weight="1"
                android:contentDescription="@null"
                android:src="@drawable/ic_pegamento"
                android:scaleType="fitXY"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="94dp" android:weightSum="1">

        <ImageButton
                android:id="@+id/EFimageButton11"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/ic_borrador"/>
        <ImageButton
                android:id="@+id/mapa"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/ic_mapa" android:scaleType="fitXY" android:focusable="false"
                android:adjustViewBounds="true"/>

        <ImageButton
                android:id="@+id/cartulina"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/ic_cartulinas" android:adjustViewBounds="true" android:scaleType="fitXY"
                android:layout_weight="0.10"/>

    </LinearLayout>
</LinearLayout>