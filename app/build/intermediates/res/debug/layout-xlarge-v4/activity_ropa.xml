                android:src="@drawable/ic_camisa" 
                android:contentDescription="@string/hello_world"/>

            <ImageButton
                android:id="@+id/RimageButton2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pantalon" 
                android:contentDescription="@string/hello_world"/>

            <ImageButton
                android:id="@+id/RimageButton3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_tennis"
                android:contentDescription="@string/hello_world" />

            <ImageButton
                android:id="@+id/RimageButton4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_playera"
                android:contentDescription="@string/hello_world" />

            <ImageButton
                android:id="@+id/RimageButton5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_gorra_18956"
                android:contentDescription="@string/hello_world" />

