<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.speak.speakup"
    android:versionCode="14"
    android:versionName="Speak1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Speakuptheme" >
        <activity
            android:name="com.speak.speakup.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.speak.speakup.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.speak.speakup.PersonasActivity"
            android:label="@string/title_activity_personas" >
        </activity>
        <activity
            android:name="com.speak.speakup.VerbosActivity"
            android:label="@string/title_activity_verbos" >
        </activity>
        <activity
            android:name="com.speak.speakup.ComidaActivity"
            android:label="@string/title_activity_comida" >
        </activity>
        <activity
            android:name="com.speak.speakup.RopaActivity"
            android:label="@string/title_activity_ropa" >
        </activity>
        <activity
            android:name="com.speak.speakup.FrecuenteActivity"
            android:label="@string/title_activity_frecuente" >
        </activity>
        <activity
            android:name="com.speak.speakup.Juegos"
            android:label="@string/title_activity_juegos" >
        </activity>
        <activity
            android:name="com.speak.speakup.PronunciaActivity"
            android:label="@string/title_activity_pronuncia" >
        </activity>
        <activity
            android:name="com.speak.speakup.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.speak.speakup.CasaFrec"
            android:label="@string/title_activity_casa_frec"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.speak.speakup.EscuelaFrec"
            android:label="@string/title_activity_escuela_frec"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.speak.speakup.Otrasfrec"
            android:label="@string/title_activity_otrasfrec"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.speak.speakup.Papeleria" >
        </activity>
        <activity
            android:name="com.speak.speakup.util.CineActivity"
            android:label="@string/title_activity_cine" >
        </activity>
    </application>

</manifest>